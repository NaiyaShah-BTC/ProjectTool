<div class="nested-fields">
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :status, "Done" %>
    <%= f.check_box :status %>
  </div>
  <div class="field">
    <%= f.label :deadline %>
    <%= f.text_field :deadline %>
  </div>
  <%= link_to_remove_association "remove task", f %>
</div>
